<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
 	<td><%= product.price %></td>
	<td><%= product.category.name%></td>
        <td><%= link_to 'Show', [:backend,product] %></td>
        <td><%= link_to 'Edit', edit_backend_product_path(product) %></td>
        <td><%= link_to 'Destroy',[:backend,product], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

